<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="@drawable/qqq2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/doctor_image"
            android:src="@drawable/mzee" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/doctorSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/doctorHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/doctorRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rating_background"
            android:padding="4dp"
            android:text="4.5"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/patientNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/appointmentDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter appointment date"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/appointmentTimeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter appointment time"
            android:paddingTop="16dp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:layout_gravity="center"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"/>
        <Button
            android:id="@+id/uberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Uber"
            android:layout_gravity="center"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"/>
    </LinearLayout>
</ScrollView>
