<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Results Recording Form"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Test Type Spinner -->
        <TextView
            android:id="@+id/test_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Test:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/test_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/spinner_background"
            android:padding="16dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_margin="8dp"
            style="@style/CustomSpinner"
            android:layout_marginBottom="16dp"
            android:entries="@array/test_types" />

        <!-- Results Input -->
        <TextView
            android:id="@+id/results_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results Obtained:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/results_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:hint="Enter results"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- Diagnosis Input -->
        <TextView
            android:id="@+id/diagnosis_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/diagnosis_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:hint="Enter diagnosis"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- Comments Input -->
        <TextView
            android:id="@+id/comments_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/comments_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:hint="Enter any additional comments"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
